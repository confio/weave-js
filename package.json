{
  "name": "weave",
  "version": "0.2.0",
  "description": "Client library to talk to weave-based blockchain apps",
  "author": "Ethan Frey <ethanfrey@users.noreply.github.com>",
  "license": "Apache-2.0",
  "keywords": [
    "confio",
    "blockchain",
    "lightclient"
  ],
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "cli": "node bin/cli.js",
    "tdd": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "start": "webpack-dev-server --config webpack/demo.js",
    "build": "webpack --config webpack/build.js --output-path=lib/",
    "build:min": "webpack -p --config webpack/build_min.js --output-path=lib/",
    "build:all": "npm run build && npm run build:min",
    "build:lib": "npm run build && npm run build:min",
    "prepublishOnly": "npm test && rimraf lib/** && npm run build:lib",
    "pbjs": "node ./node_modules/protobufjs/cli/bin/pbjs",
    "findProto": "find $GOPATH/src/github.com/confio/weave -name '*.proto' -not -path '*/vendor/*'",
    "packProto": "yarn run pbjs `yarn run -s findProto` -t json -o src/weave.json"
  },
  "dependencies": {
    "async-repl": "ef4/async-repl",
    "bufferutil": "^3.0.3",
    "deep-equal": "^1.0.1",
    "js-nacl": "^1.2.2",
    "leveldown": "^3.0.0",
    "levelup": "^2.0.2",
    "protobufjs": "^6.8.6",
    "sha.js": "^2.4.10",
    "tendermint": "^3.0.0",
    "utf-8-validate": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^20.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-h-jsx": "^1.0.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.24.0",
    "css-loader": "^0.26.1",
    "eslint": "^4.18.2",
    "jest": "^20.0.4",
    "memdown": "^2.0.0",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^5.0.1",
    "stream-buffers": "^3.0.1",
    "style-loader": "^0.13.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.5.0",
    "webpack-node-externals": "^1.5.4",
    "worker-loader": "^0.8.0"
  },
  "browser": {
    "ed25519-supercop": "supercop.js"
  },
  "repository": {
    "url": "git+https://github.com/confio/weave-js.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/confio/weave-js/issues"
  },
  "homepage": "https://github.com/confio/weave-js#readme",
  "jest": {
    "setupFiles": [],
    "moduleNameMapper": {
      "\\.(css|scss|jpg|png)$": "<rootDir>/test/helpers/empty-module.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "./",
    "coverageReporters": [
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/lib/"
    ],
    "testURL": "http://localhost"
  }
}
